---
import Icon from './atoms/Icon.astro'
import siteData from '../data/site.json'
---

<footer class="footer">
  <div class="footer-copyright">{siteData.copyright}</div>
  <div class="footer-social-links"> 
    <a href="https://astro.build"
      class="footer-social-link"
      target="_blank"
      aria-label="astro">
      <Icon name="astro-dark" data-theme-visibility="dark"/>
      <Icon name="astro-light" data-theme-visibility="light"/>
    </a>
  </div>
</footer>

<style lang="postcss">
  .footer {
    background-color: var(--theme-color-background--soft);
    padding: 2rem var(--margin-sides);
    text-align: center;
    
    &-copyright {
      font-size: 0.9em;
      margin-bottom: 1rem;
    }

    &-socials {
      padding-top: 1rem;
    }
      
    &-social-link {
      display: inline-block;
      padding-right: 15px;
      color: var(--theme-color-text--intense);

      svg {
        width: 26px;
        height: 26px;
      }
    }
  }

  @media (prefers-color-scheme: light) {
    html:not([data-theme]) [data-theme-visibility="dark"] {
      display: none;
    }
  }

  @media (prefers-color-scheme: dark) {
    html:not([data-theme]) [data-theme-visibility="light"] {
      display: none;
    }
  }

  html[data-theme="dark"] [data-theme-visibility="light"] {
    display: none;
  }

  html[data-theme="light"] [data-theme-visibility="dark"] {
    display: none;
  }
</style>
