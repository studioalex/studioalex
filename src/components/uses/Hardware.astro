---
export interface HardwareType {
  title: string;
  content: string;
}

export interface Props {
  list: HardwareType[];
}

const { list } = Astro.props as Props
---
<div class="hardware">
  <h2 class="hardware-title">Hardware</h2>
  <div class="hardware-grid">
    {list.map(item => (
      <div class="hardware-subtitle">{item.title}:</div>
      <div class="hardware-info">{item.content}</div>
    ))}
  </div>
</div>

<style>
  .hardware {
    margin: 4rem 0;

    &-title {
      color: var(--theme-color-text--intense);
      font-size: var(--font-size--h4);
      font-weight: 600;
      margin: 1rem 0;
    }

    &-grid {
      display: grid;
      grid-template-columns: 1fr 3fr;
      gap: 20px;
    }

    &-subtitle {
      color: var(--theme-color-text--soft);
    }

    &-info {
      color: var(--theme-color-text);
    }
  }
</style>
