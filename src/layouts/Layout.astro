---
import { site } from '../lib/getSiteInfo'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'

import '../styles/global.css'

export interface Props {
	title?: string;
	styles?: string;
	background?: string;
}

const {
	title = site.fields.title,
	styles = false,
	background = false
} = Astro.props

const contentClass = ['sa-content']
if (styles) {
	contentClass.push(styles)
}

const backgroundClass = ['sa']
if (background) {
	backgroundClass.push(background)
}
