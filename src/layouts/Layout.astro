<style>
.sa {
	min-width: 100%;
  min-height: 100%;
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-content: stretch;
  align-items: stretch;
  color: var(--color-text);
	overflow-x: hidden;
  overflow-y: auto;
  font-family: 'Montserrat', sans-serif;
	z-index: 0;

	&.praha {
		background-image: url("/images/karluvmost.jpg");
		background-repeat: no-repeat;
		background-position: 0 -40vh;
		background-size: 100vmax;
		transition: background 1s;
	}
}

@media only screen and (max-width: 2400px) {
  .sa {
    &.praha {
		  background-position: 0 -20vh;
    }
  }
}

.sa-content {
  flex: 1 1 auto;
  align-self: auto;

	&.flex {
		display: flex;
    flex-direction: column;
    flex-wrap: nowrap;
    justify-content: flex-start;
    align-content: stretch;
    align-items: stretch;
	}
  
  &.flex-distribute {
    display: flex;
    flex-direction: column;
    flex-wrap: nowrap;
    justify-content: space-around;
    align-content: stretch;
    align-items: stretch;
  }

	&.flex-center {
    display: flex;
    flex-direction: column;
    flex-wrap: nowrap;
    justify-content: center;
    align-content: stretch;
    align-items: stretch;
  }


  &.size-full {
		max-width: 1440px;
    margin: 0 auto;
	}

	&.size-small {
    max-width: 768px;
		padding: 0 2rem;
    margin: 0 auto;
  }
}
</style>
